<odoo>
    <record id="product_template_form_view_rental" model="ir.ui.view">
        <field name="name">product.template.form.rental</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Bookings">
                    <group>
                        <group string="Configuration">
                            <field name="rental_min_hours"/>
                            <field name="rental_min_days"/>
                            <field name="rental_min_weeks"/>
                        </group>
                        <group string="Pricing">
                            <field name="rental_price_hour"/>
                            <field name="rental_price_day"/>
                            <field name="rental_price_week"/>
                        </group>
                    </group>
                    <group string="Availability">
                        <group>
                            <field name="rental_status" widget="badge" 
                                decoration-success="rental_status == 'available'"
                                decoration-warning="rental_status == 'reserved'"
                                decoration-danger="rental_status == 'rented'"
                                decoration-muted="rental_status == 'unavailable'"/>
                            <field name="rental_available_units"/>
                            <field name="rental_reserved_units"/>
                            <field name="rental_rented_units"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
